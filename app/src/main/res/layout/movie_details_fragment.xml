<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.fragments.MovieDetails">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:contentScrim="@color/colorPrimaryDark"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:collapsedTitleTextAppearance="@android:color/transparent"
                android:fitsSystemWindows="true">
            <ImageView

                    android:id="@+id/iv_movie_detail"
                    app:layout_collapseMode="parallax"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:scaleType="centerCrop"/>

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:titleTextColor="@android:color/background_light"
                    app:layout_collapseMode="pin">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                app:cardUseCompatPadding="true">

            <RelativeLayout
                    android:layout_width="411dp"
                    android:layout_height="369dp">
                <ImageView
                        android:src="@drawable/ic_movie_creation_black_24dp"
                        android:layout_width="101dp"
                        android:layout_height="99dp" android:layout_alignParentStart="true"
                        android:layout_marginStart="7dp" android:layout_alignParentTop="true"
                        android:id="@+id/iv_movie_icon" android:layout_marginTop="0dp"
                        android:background="@android:color/darker_gray"/>
                <TextView
                        android:text="TYPE"
                        android:textAllCaps="true"
                        android:textAlignment="center"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content" android:layout_alignParentStart="true"
                        android:layout_marginStart="116dp" android:layout_alignParentTop="true"
                        android:id="@+id/tv_type_detail" android:layout_marginTop="1dp"
                        android:background="@drawable/screen_border"
                        android:textColor="@android:color/background_light"/>
                <TextView
                        android:text="Movie Title"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_width="287dp"
                        android:layout_height="37dp" android:layout_alignParentStart="true"
                        android:layout_marginStart="117dp" android:layout_alignParentTop="true"
                        android:id="@+id/tv_title_detail" android:layout_marginTop="25dp"/>
                <TextView
                        android:text="2018"
                        android:textSize="14sp"
                        android:layout_width="99dp"
                        android:layout_height="wrap_content" android:layout_alignParentStart="true"
                        android:layout_marginStart="117dp" android:layout_alignParentTop="true"
                        android:id="@+id/tv_year_detail" android:layout_marginTop="67dp"/>
                <TextView
                        android:text="Movie Plot"
                        android:layout_width="387dp"
                        android:layout_height="wrap_content" android:layout_alignParentStart="true"
                        android:layout_marginStart="9dp" android:layout_alignParentTop="true"
                        android:id="@+id/tv_movie_plot_detail" android:layout_marginTop="164dp"
                        android:textSize="30dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:pressedTranslationZ="12dp"
            app:layout_anchor="@id/app_bar_layout"
            app:elevation="6dp"
            android:src="@drawable/ic_share_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchorGravity="bottom|right|end"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>